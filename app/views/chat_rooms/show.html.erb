<h1><%= @chat_room.title %></h1>

<!-- <div class="container-fluid"> -->
  <div class="row parent">
    <div id="scroller" class='col-12'>
      <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
        <%= render @chat_room.messages %>
      </div>
    </div>
  </div>

  <div class="fixed-bottom">
    <%= form_for @message, url: '#', html: { class: 'form-inline' } do |f| %>
      <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
      <%= f.text_field :body, class: 'form-control', placeholder: 'Type a message', autocomplete: 'off' %>
    <% end %>
  </div>
<!-- </div> -->
